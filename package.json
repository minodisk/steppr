{
  "name": "steppr",
  "version": "0.0.3",
  "description": "Terminal spinner for step execution",
  "main": "lib/index.js",
  "author": "Daisuke Mino",
  "license": "MIT",
  "files": ["LICENSE", "README.md", "lib", "package.json"],
  "scripts": {
    "build":
      "rm -rf lib && yarn flow-remove-types -d lib src && yarn flow-copy-source src lib && yarn format",
    "test": "yarn jest",
    "format": "yarn prettier --write README.md src/*.js lib/*.js",
    "prepublish": "yarn build"
  },
  "jest": {
    "transform": {
      "\\.js$": "./jest/flow-remove-types"
    }
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "cli-spinners": "^1.1.0",
    "log-update": "^2.3.0"
  },
  "devDependencies": {
    "flow-bin": "^0.59.0",
    "flow-copy-source": "^1.2.1",
    "flow-remove-types": "^1.2.3",
    "jest": "^22.1.3",
    "prettier": "^1.9.2"
  }
}
